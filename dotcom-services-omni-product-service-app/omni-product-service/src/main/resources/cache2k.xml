<cache2k>
    <version>1.0</version>
    <defaultManagerName>cache2kCacheManager</defaultManagerName>
    <skipCheckOnStartup>true</skipCheckOnStartup>
    <ignoreMissingCacheConfiguration>true</ignoreMissingCacheConfiguration>

    <defaults>
        <cache>
            <entryCapacity>2000</entryCapacity>
            <expireAfterWrite>1d</expireAfterWrite>
        </cache>
    </defaults>

    <templates>
        <cache>
            <name>defaultCacheTemplate</name>
            <expireAfterWrite>1d</expireAfterWrite>
        </cache>
    </templates>

  <caches>
      <cache>
           <name>referenceItemsCacheById</name>
        <entryCapacity>10</entryCapacity>
         <include>defaultCacheTemplate</include>
         <boostConcurrency>true</boostConcurrency>
 </cache>
</caches>
</cache2k>