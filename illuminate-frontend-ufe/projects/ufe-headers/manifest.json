{
    "manifest_version": 3,

    "name": "UFE Headers",
    "description": "Simple extension to change headers for Sephora UFE Pages",
    "version": "2.0.4",
    "minimum_chrome_version": "100",

    "action": {
        "default_icon": {
            "32": "images/headers.png"
        },
        "default_title": "UFE Headers",
        "default_popup": "menu-options.html"
    },

    "content_scripts": [
        {
            "matches": ["http://*.sephora.com/*", "https://*.sephora.com/*"],
            "all_frames": true,
            "js": ["js/index.js"]
        }
    ],

    "background": {
        "service_worker": "js/main.js"
    },
    "permissions": [
        "tabs",
        "cookies",
        "webNavigation",
        "webRequest",
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess",
        "declarativeNetRequestFeedback"
    ],
    "host_permissions": ["*://*.sephora.com/*"]
}
