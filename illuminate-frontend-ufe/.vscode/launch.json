{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug UI project tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": ["--runInBand", "--no-cache", "--no-coverage"],
            "cwd": "${workspaceFolder}/projects/ui",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Debug UI project current test",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": ["--runInBand", "--no-cache", "--no-coverage", "${relativeFile}"],
            "cwd": "${workspaceFolder}/projects/ui",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Debug UI project tests by name pattern",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": ["--runInBand", "--no-cache", "--no-coverage", "--testNamePattern=${input:jestTestNamePattern}"],
            "cwd": "${workspaceFolder}/projects/ui",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ],
    "inputs": [
        {
            "id": "jestTestNamePattern",
            "description": "Enter Jest test name pattern to match specific tests",
            "default": "",
            "type": "promptString"
        }
    ]
}
